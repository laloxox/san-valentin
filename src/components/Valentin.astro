    <!-- Animaciones personalizadas -->
    

<style>
@tailwind utilities;

@keyframes float {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }

        100% {
            transform: translateY(0px);
        }
    }

    .animate-float {
        animation: float 5s ease-in-out infinite;
    }



        @keyframes pulse-slow {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .animate-pulse-slow {
            animation: pulse-slow 2s ease-in-out infinite;
        }

        .heart-pulse {
            font-size: 4rem;
            text-shadow: 0 0 20px rgba(255, 50, 50, 0.5);
        }

        #surpriseBtn:active {
            animation: heartExplosion 0.5s ease-out;
        }

        @keyframes heartExplosion {
            0% { transform: scale(1); }
            50% { transform: scale(0.9); }
            100% { transform: scale(1); }
        }
    </style>

    <!-- Script para personalización -->
    <script>
        // Efecto al hacer clic en el botón
        document.getElementById('surpriseBtn').addEventListener('click', () => {
            const hearts = ['❤️', '💖', '💝', '💘','🌟','💗','😗', '💞', '🔥', '⭐', '💜', '🤍', '🙌', '✨', '🙈' ];
            for(let i = 0; i < 50; i++) {
                const heart = document.createElement('div');
                heart.style.position = 'absolute';
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.animation = `fall ${Math.random() * 3 + 2}s linear`;
                heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
                document.body.appendChild(heart);

                heart.addEventListener('animationend', () => {
                    heart.remove();
                });
            }
        });

        // Animación de caída de corazones
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fall {
            0% {
                    transform: translateY(-100vh) rotate(0deg);
                    opacity: 70;
                }
            100% {
                    transform: translateY(100vh) rotate(360deg);
                    opacity: 20;
                }
            }
        `;
        document.head.appendChild(style);

    </script>
</body>


<style>
    .rgb-button {
        background-image: linear-gradient(45deg, rgb(250, 18, 18),  rgb(156, 62, 185), rgb(221, 79, 197));
        background-size: 600% 100%;
        animation: gradient 6s ease infinite;
    }

    @keyframes gradient {
        0% {
            background-position: 0% 50%;

        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
            }
        }
</style>